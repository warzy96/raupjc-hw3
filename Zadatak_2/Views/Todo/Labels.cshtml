@model Zadatak_2.Models.LabelsViewModel

@{
    ViewData["Title"] = "Labels";
    Layout = "_Layout";
}

<h2>Labels</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Labels" method="post">
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
                <span style="color: red">@Html.ValidationMessageFor(m => m.ErrorMessage)</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
   
</div>

<div>
    <a asp-action="Add">Go back...</a>
</div>

